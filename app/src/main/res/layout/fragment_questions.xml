<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepPurple_50">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_back"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:background="@drawable/acb_bg"
        android:text="@string/back"
        app:layout_constraintBottom_toTopOf="@+id/tv_number_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_number_question"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer1"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_question"
        app:layout_constraintStart_toStartOf="@+id/tv_question"
        app:layout_constraintTop_toBottomOf="@+id/tv_question"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer2"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/acb_answer1"
        app:layout_constraintStart_toStartOf="@+id/acb_answer1"
        app:layout_constraintTop_toBottomOf="@+id/acb_answer1"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer3"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/acb_answer2"
        app:layout_constraintStart_toStartOf="@+id/acb_answer2"
        app:layout_constraintTop_toBottomOf="@+id/acb_answer2"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer4"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/acb_answer3"
        app:layout_constraintStart_toStartOf="@+id/acb_answer3"
        app:layout_constraintTop_toBottomOf="@+id/acb_answer3"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer5"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/acb_answer4"
        app:layout_constraintStart_toStartOf="@+id/acb_answer4"
        app:layout_constraintTop_toBottomOf="@+id/acb_answer4"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_answer6"
        style="@style/Button"
        android:layout_width="@dimen/dimen_390dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textSize="@dimen/ts_14sp"
        app:layout_constraintEnd_toEndOf="@+id/acb_answer5"
        app:layout_constraintStart_toStartOf="@+id/acb_answer5"
        app:layout_constraintTop_toBottomOf="@+id/acb_answer5"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>